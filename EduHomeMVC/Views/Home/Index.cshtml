@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}


<!-- Background Area Start -->
<section id="slider-container" class="slider-area two">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (var slider in Model.Sliders)
        {
            <!-- Start Slingle Slide -->
            <div class="single-slide item" style="background-image: url(assets/img/slider/@slider.Image)">
                <!-- Start Slider Content -->
            <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content text-center">
                                        <h2>@slider.Header.ToString().ToUpper()</h2>
                                        <p>@slider.Description</p>
                                        <a class="default-btn" asp-controller="About" asp-action="Index">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
        </div>
            <!-- End Slingle Slide -->
        }
    </div>
</section>
<!-- Background Area End -->
<!-- Service Start -->
<div class="service-area two pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (var teacher in Model.Teachers.Datas)
            {
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="single-service">
                        <h3><a href="teacher.html">@teacher.Name.ToString().ToUpper()</a></h3>
                        <p>@teacher.About.ToString().Substring(0,40)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->
<!-- About Start -->
@await Component.InvokeAsync("About")
<!-- About End -->
<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center" style="background: url(/assets/img/course/@Model.Images["HomeCoursesBGImage"]);">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section1.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var course in Model.Courses.Datas)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course">
                        <div class="course-img">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                                <img src="~/assets/img/course/@course.CourseImages.FirstOrDefault(i => i.IsMain).Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.CourseCategory.Name</a></h3>
                            <p>@course.Description.ToString().Substring(0, 80)</p>
                            <a class="default-btn" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Notice Start -->
@await Component.InvokeAsync("NoticeBoard")
<!-- Notice End -->
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (var eventt in Model.Events.Datas.Take(2))
                {
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id"><img src="~/assets/img/event/@eventt.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@eventt.Date.ToString("MMMM dd, yyyy")</h3>
                            <h4><a asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id">@eventt.Name.ToString().ToUpper()</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@eventt.Date.ToString("H:mm:ss")</li>
                                <li><i class="fa fa-map-marker"></i>New Yourk City</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id">join now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (var eventt in Model.Events.Datas.Skip(2))
                {
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id"><img src="~/assets/img/event/@eventt.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@eventt.Date.ToString("MMMM dd, yyyy")</h3>
                            <h4><a asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id">@eventt.Name.ToString().ToUpper()</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@eventt.Date.ToString("H:mm:ss")</li>
                                <li><i class="fa fa-map-marker"></i>New Yourk City</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Events" asp-action="Details" asp-route-id="@eventt.Id">join now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
@await Component.InvokeAsync("Testimonial")
<!-- Testimonial Area End -->
@await Html.PartialAsync("_Main");
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var blog in Model.Blogs.Datas)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id">><img src="~/assets/img/blog/@blog.BlogImages.FirstOrDefault(i => i.IsMain).Image" alt="blog"></a>
                            <div class="blog-hover">
                                <a asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @blog.Author  /  @blog.Date.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i> @blog.CommentCount</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id">@blog.Content </a></h2>
                                <a asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Blog Area End -->
