@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", "Password Reset")
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="pt-3" method="post" asp-action="ResetPassword">
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password ...">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Confirm password ...">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Reset password</button>
                            </div>
                            <input type="hidden" asp-for="Token" name="token" value="@Model.Token" />
                            <input type="hidden" asp-for="Email" name="email" value="@Model.Email" />
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->

@section Scripts{
    <partial name="_ValidationPartial" />
}