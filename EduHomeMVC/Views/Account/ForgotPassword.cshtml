@model ForgotPasswordVM
@{
    ViewData["Title"] = "Password Reset";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", "Password Reset")
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <span>Please enter your email to reset your password.</span>
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form class="pt-3" method="post" asp-action="ForgotPassword">
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="button-box" style="display: grid;">
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
