@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", "Register")
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form class="pt-3" method="post" asp-action="Register">
                                <div class="form-group">
                                    <input asp-for="Name" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Surname" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Surname">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Confirm password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                        <a asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a asp-action="Login" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@section Scripts{
<partial name="_ValidationPartial" />
}