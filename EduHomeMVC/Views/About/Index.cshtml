@model Paginate<TeacherListVM>
@{
    ViewData["Title"] = "About Page";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", "dfsf us")
<!-- Banner Area End -->
<!-- About Start -->
@await Component.InvokeAsync("About")
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var teacher in Model.Datas)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id"><img src="~/assets/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id">@teacher.Name.ToString().ToUpper()</a></h2>
                            <h4>@teacher.Position</h4>
                            <ul>
                                <li><a href="https://www.facebook.com/@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="https://www.pinterest.com/@teacher.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="https://www.instagram.com/@teacher.Instagram"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="https://twitter.com/@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
@await Component.InvokeAsync("Testimonial")
<!-- Testimonial Area End -->
<!-- Notice Start -->
@await Component.InvokeAsync("NoticeBoard")
<!-- Notice End -->
