@model Teacher

@{
    ViewData["Title"] = "Details";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", "Teacher Details")
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="~/assets/img/teacher/@Model.TeacherDetails.Image" style="height: 100%;width: 100%;" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Name</h2>
                    <h5>@Model.Position.Name</h5>
                    <h4>about me</h4>
                    <p>@Model.TeacherDetails.About</p>
                    <ul>
                        <li><span>degree: </span>@Model.TeacherDetails.Degree</li>
                        <li><span>experience: </span>@Model.TeacherDetails.Experience</li>
                        <li><span>hobbies: </span>@Model.TeacherDetails.Hobbies</li>
                        <li><span>faculty: </span>@Model.Faculty.Name</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span> @Model.TeacherContactInfo.Email</p>
                    <p><span>make a call : </span> @Model.TeacherContactInfo.PhoneNumber</p>
                    <p><span>skype : </span> @Model.TeacherSocialMedia.Skype</p>
                    <ul>
                        <li><a href="https://www.facebook.com/devitems/@Model.TeacherSocialMedia.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="https://www.pinterest.com/@Model.TeacherSocialMedia.Pinterest/"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="https://www.instagram.com/@Model.TeacherSocialMedia.Instagram/"><i class="zmdi zmdi-instagram"></i></a></li>
                        <li><a href="https://twitter.com/@Model.TeacherSocialMedia.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (var teacherSkill in Model.TeacherSkills)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@teacherSkill.Skill.Name</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @(teacherSkill.LevelPercentage)%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@(teacherSkill.LevelPercentage)%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
