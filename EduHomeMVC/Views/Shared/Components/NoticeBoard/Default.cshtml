@model NoticeBoardVM
<!-- Notice Start -->
<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video" style='background: rgba(0, 0, 0, 0) url("/assets/img/notice/@Model.NoticeVideo.VideoImage") repeat scroll 0 0;background-position-x: 0px;background-position-y: 0px;background-repeat: repeat;background-size: auto;position: relative;height: 382px;width: 100%;'>
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.NoticeVideo.VideoUrl">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var notice in Model.Notices)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@notice.Date.ToString("MMMM dd, yyyy")</h4>
                                <p>@notice.Content </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->S