@model Dictionary<string, string>

<!-- Header Area Start -->
<header class="top">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="header-top-left">
                        <p>HAVE ANY QUESTION ?  @Model["PhoneNumber1"]</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="header-top-right text-right">
                        <ul>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><i class="ti-user" ></i><span style="font-size: 14px;font-weight: 600;font-family: 'Open Sans', sans-serif;color: #fff;text-transform: uppercase;line-height: 68px;position: relative;z-index: 1;">@User.Identity.Name</span></li>
                                <li><i class="ti-power-off"></i> <a asp-controller="Account" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><i class="ti-user"></i> <a asp-controller="Account" asp-action="Register">Register</a></li>
                                <li><i class="ti-power-off"></i><a asp-controller="Account" asp-action="Login">Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-area two header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index" target="_blank"><img src="~/assets/img/logo/@Model["HeaderLogo"]" alt="eduhome" /></a>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-6">
                    <div class="content-wrapper text-right">
                        <!-- Main Menu Start -->
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                        <ul>
                                            <li><a asp-controller="Home" asp-action="Index">Home One</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                                    <li>
                                        <a asp-controller="Courses" asp-action="Index">courses</a>
                                        <ul>
                                            <li><a asp-controller="Courses" asp-action="Index">courses</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a asp-controller="Events" asp-action="Index">event</a>
                                        <ul>
                                            <li><a asp-controller="Events" asp-action="Index">event</a></li>
                                            <li><a asp-controller="Events" asp-action="IndexWithSidebar">events sidebar</a></li>
                                        </ul>
                                    </li>
                                    <li class="hidden-sm">
                                        <a asp-controller="Teachers" asp-action="Index">teachers</a>
                                        @*<ul>
                                            <li><a asp-controller="Teachers" asp-action="Index">teachers</a></li>
                                        </ul>*@
                                    </li>
                                    <li>
                                        <a asp-controller="Blogs" asp-action="Index">blogs</a>
                                        <ul>
                                            <li><a asp-controller="Blogs" asp-action="Index">blogs</a></li>
                                            <li><a asp-controller="Blogs" asp-action="IndexWithSidebar">blogs sidebar</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="contact.html">Contact</a></li>
                                    <li><a href="#">Buy Now</a>
                                </ul>
                            </nav>
                        </div>
                        <!--Search Form Start-->
                        <div class="search-btn">
                            <ul data-toggle="dropdown" class="header-search search-toggle">
                                <li class="search-menu">
                                    <i class="fa fa-search"></i>
                                </li>
                            </ul>
                            <div class="search">
                                <div class="search-form">
                                    <form id="search-form" action="#">
                                        <input type="search" placeholder="Search here..." name="search" />
                                        <button type="submit">
                                            <span><i class="fa fa-search"></i></span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--End of Search Form-->
                        <!-- Main Menu End -->
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mobile-menu hidden-lg hidden-md hidden-sm"></div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header Area End -->