@model AboutVC
<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.Title.ToString().ToUpper()</h2>
                    <p>@Model.Description</p>
                    <a class="default-btn" asp-controller="About" asp-action="Index">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/assets/img/about/@Model.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->